
# Put the time previous command executed on first line of prompt, 
# then show status info, path, and allow new command input on next line
# (adapted from af-magic theme)
#PROMPT='$FG[237][%*]------------------------------------------------------------%{$reset_color%}
#$FG[032]'$PROMPT

#bindkey "^

## Source .zshrc
alias szrc="source ~/.zshrc"
alias zshrc="sudo vim ~/.zshrc && source ~/.zshrc"

# Delete ~/.zsh_history (TODO: make this less destructive; want to correct, not delete)
alias rzhist="rm "${HOME}"/.zsh_history"

## aliases aliases
alias aliasedit="sudo vim ~/.zsh_aliases && source ~/.zshrc"
alias aliases="sudo vim ~/.zsh_aliases && source ~/.zshrc"

## ls aliases and colorization
# Dont show . or .., but show hidden files.
alias lsa="ls --color=always -A"
# Show hidden files except .. and ., and show in column format with human-readable sizes.
alias lf="ls --color=always -lhA"
# Like ls -lhA, but sorted by modification time.
alias lt="ls --color=always -lhAt"
# Like ls -lhA, but sorted by file extension.
alias lx="ls --color=always -lhAX"
# Like ls -lhA, but sorted by file size.
alias lss="ls --color=always -lhAS"

## Grep colorization
alias grep="grep --color=auto"
alias egrep="egrep --color=auto"
alias fgrep="fgrep --color=auto"

## Apt-get update and upgrade
alias uuu="sudo apt-get update && sudo apt-get upgrade && sudo apt-get dist-upgrade && upgrade_oh_my_zsh"

## cd aliases
alias cd..="cd .."
alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../../"
alias .....="cd ../../../../"
alias ......="cd ../../../../../"
alias .......="cd ../../../../../../"
alias ........="cd ../../../../../../../"

## git aliases
alias gitkhere="gitk --all &"

