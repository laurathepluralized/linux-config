# Stop silly trackpad behaviors, such as tap-to-click

synclient MaxTapTime=0 MaxTapMove=0 MaxDoubleTapTime=0 SingleTapTimeout=0 PalmDetect=1 TapAndDragGesture=0 HorizTwoFingerScroll=1 VertTwoFingerScroll=1 RTCornerButton=0 RBCornerButton=0 LTCornerButton=0 LBCornerButton=0 TapButton1=0 TapButton2=0 TapButton3=0 && echo "Touchpad settings set"
